<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.greifmatthias.toddler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/StatusbarLight">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ExerciseActivity" />
        <activity android:name=".Activities.SettingsActivity" />
        <activity
            android:name=".Activities.AboutActivity"
            android:theme="@style/StatusbarAccent" />
        <activity
            android:name=".Activities.ManagerActivity"
            android:label="@string/title_activity_manager" />
        <activity android:name=".Activities.ToddlerDetailActivity" />
        <activity android:name=".PreteachingActivity"></activity>
    </application>

</manifest>